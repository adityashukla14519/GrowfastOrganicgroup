<script>
    const xValues3 = [];
    const yValues3 = [];
    generateData("x * 2 + 7", 0, 10, 0.5);

    new Chart("linemyChart3", {
        type: "line",
        data: {
            labels: xValues3,
            datasets: [{
                fill: false,
                pointRadius: 1,
                borderColor: "rgba(255,0,0,0.5)",
                data: yValues3
            }]
        },
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "y = x * 2 + 7",
                fontSize: 16
            }
        }
    });
    function generateData(value, i1, i2, step = 1) {
        for (let x = i1; x <= i2; x += step) {
            xValues3.push(x);
            yValues3.push(eval(value));
        }
    }
</script>
