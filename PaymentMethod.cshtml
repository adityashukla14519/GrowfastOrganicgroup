<script>
    function Getid(id) {
        var up = id;
        //alert(up);
        $.ajax({
            url: '/Admin/Updatepaymentmethod',
            type: "GET",
            dataType: "JSON",
            data: { Up: up },
            success: function (data) {
                //alert(data);
                $("#upload").removeAttr("required");
                $("#hid").val(data[0]);
                $("#type").val(data[1]);
                if (data[1] == "UPI") {

                    $("#upiid").val(data[2]);

                    $("#dvupi").show();
                    $("#dvqr").hide();
                    $("#upiid").attr("required", true);
                    $("#upload").removeAttr("required");
                }
                else {
                    $("#filname").val(data[2]);
                    $("#dvupi").hide();
                    $("#dvqr").show();
                    $("#upload").attr("required", true);
                    $("#upiid").removeAttr("required");
                }

                $("#status").val(data[3]);
                $("#status").removeClass("readonly");
                $("#status").prop("disabled", false);
            }
        })
    }
</script>
