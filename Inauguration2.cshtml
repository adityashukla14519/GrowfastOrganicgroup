<body class="form-login-body">

    <div class="container-fluid">
        <div class="top-menu" style="background-color:lightgoldenrodyellow">
            <div class="container">
                <div class="row" style="height:75px;" id="cod">
                    <div class="col-md-3 col-3 logo " style="padding-top:5px">
                        <img src="~/Images/grow2.jpg" alt="" id="rl" style="height:60px;width:100px" />
                    </div>
                    <div class="col-md-6 col-6 logo justify-content-center d-flex" style="padding-top:5px">
                        <span style="margin-top:20px;color:forestgreen"><b>GROWFAST ORGANIC DIAMOND</b> </span>
                    </div>
                    <div class="col-md-3 col-3 logo justify-content-end d-flex">
                        <img src="~/Images/gros.jpg" alt="" style="height:60px;width:100px;margin-left:5px;margin-top:7px" id="ecimg" />
                    </div>
                </div>
            </div>
        </div>
        <div class="login-body container-fluid">
            <div class="container">
                <form runat="server">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="login-img">
                                    <img src="~/Images/Growfast Logo.png" alt="Click to login" style="height:350px;padding:0px;margin-left:180px;margin-top:20px" />
                            </div>
                        </div>

                    </div>
                </form>
                <div class="confetti-container">
                    <!-- Confetti animation script here -->
                </div>
            </div>
            <style>
                .loader-container {
                    position: fixed;
                    top: 94%; /* Position at the middle of the viewport vertically */
                    left: 0;
                    width: 100%;
                    height: 17px;
                    transform: translateY(-50%);
                }
                .confetti-container {
                    position: fixed;
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                }

                .loader {
                    position: relative;
                    height: 100%;
                    background-color: red; /* Color of the loader */
                    width: 1%; /* Initial width, will be increased dynamically */
                }

                .loader-text {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    color: white;
                }
            </style>

            <div class="loader-container">
                <span id="ac" class="text-center" style="text-align:center"><center>ACTIVATING ALL MEMBERS</center></span>
                <span id="acc" class="text-center" style="text-align:center"><center>ALL MEMBERS ACTIVATED. LAUNCH SUCCESSFUL!</center></span>
                <div class="loader">
                    <div class="loader-text">0%</div>
                </div>
            </div>

            <script>
                window.onload = function () {
                    $("#acc").hide();
                    $("#ac").show();
                    var loader = document.querySelector('.loader');
                    var loaderText = document.querySelector('.loader-text');
                    var width = 1;
                    var interval = setInterval(function () {
                        if (width >= 100) {
                            $("#acc").show();
                            $("#ac").hide();
                            clearInterval(interval);
                            //alert("ok")
                            // Redirect to another page
                            window.location.href = "https://growfastgroups.com/";
                        } else {
                            width++;
                            loader.style.width = width + '%';
                            loaderText.textContent = width + '%'; // Update text content with current percentage
                        }
                    }, 1000);
                };
            </script>

            <script src="~/Content/js/canvas-confetti@1.4.js"></script>
            <script>
                function celebrateOnLoad() {
                    // Trigger confetti animation from slightly above the bottom center
                    confetti({
                        particleCount: 400,
                        spread: 100,
                        colors: ['#FF0000', '#00FF00'],
                        origin: { x: 0.5, y: 0.8 } // Start from slightly above the bottom center
                    });
                    // Repeat the confetti celebration after a delay
                    setTimeout(celebrateOnLoad, 4000); // Adjust the delay (in milliseconds) as needed
                }
                // Call the celebrateOnLoad function when the page is loaded
                celebrateOnLoad();
            </script>
        </div>
    </div>
    </div>
</body>
</html>