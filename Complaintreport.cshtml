    function getCmpdetail(complaintid) {
        //alert(complaintid)
        var table = $('#tblcmpdetail').DataTable();
        //alert(complaintid)
        $.ajax({
            url: '/Admin/getcmpdetails',
            type: "GET",
            dataType: "JSON",
            data: { CmpID: complaintid },
            success: function (data) {
                var jsonArray = JSON.parse(data);
                //alert(data)
              //  alert(jsonArray)
                table.clear().draw();
                $.each(jsonArray, function (index, item) {
                    // Convert datetime to yyyy-MM-dd format

                    var formattedDate = formatDate(item.Datetime);

                    table.row.add([
                        index + 1,
                        item.CmpID,
                        item.Complaintbyname,
                        item.ComplaintType,
                        item.Subject,
                        item.Priority,
                        formattedDate, // Use the formatted date here
                        item.Reply,
                        // item.Branchname,
                        item.Complaint_status,
                        item.Logname,
                    ]).draw(false);
                });

                // Open the modal using Bootstrap's modal method
                //$('#mdl').modal('show');
            }
        });
    }

    // Function to format date to yyyy-MM-dd
    function formatDate(dateString) {
        var date = new Date(dateString);
        var year = date.getFullYear();
        var month = ('0' + (date.getMonth() + 1)).slice(-2);
        var day = ('0' + date.getDate()).slice(-2);
        return year + '-' + month + '-' + day;
    }
</script>




